<?xml version="1.0" encoding="UTF-8"?>
        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.ComboBox?>
        <?import javafx.scene.control.DatePicker?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.layout.GridPane?>
<?import sample.control.DatePickerForm?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.101"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="sample.Controller"
          stylesheets="@../css/style.css">
<children>
    <Label fx:id="title" text="Search Bar"  GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <DatePickerForm  fx:id="startPicker" GridPane.columnIndex="0" GridPane.rowIndex="1"  styleClass="control" prefHeight="30" />
    <Label text="~" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <DatePickerForm fx:id="endPicker" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="control"/>
    <ComboBox fx:id="combo_period"  GridPane.columnIndex="3" GridPane.rowIndex="1" styleClass="control" onAction="#comboChanged"/>
    <Button text="Search" textFill="white" prefWidth="130" GridPane.columnIndex="4" GridPane.rowIndex="1" styleClass="control" fx:id="btn" />
</children>
</GridPane>